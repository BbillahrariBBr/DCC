<us.egek.discrollview2.DiscrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <us.egek.discrollview2.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="14dp"
            android:textSize="23sp"
            android:gravity="center"
            android:text="Ground Floor"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromTop"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromRight|fromBottom"
            android:src="@drawable/groundfloor" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="14dp"
            android:textSize="23sp"
            android:gravity="center"
            android:text="First Floor"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromBottom"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromBottom"
            android:src="@drawable/firstfloor" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="14dp"
            android:textSize="23sp"
            android:gravity="center"
            android:text="Second Floor"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromRight|fromTop"
            android:src="@drawable/secondfloor" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="14dp"
            android:textSize="23sp"
            android:gravity="center"
            android:text="Third Floor"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft|fromTop"
            android:src="@drawable/thirdfloor" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="14dp"
            android:textSize="23sp"
            android:gravity="center"
            android:text="Fourth Floor"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromRight"
            android:src="@drawable/fourthfloor" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="14dp"
            android:textSize="23sp"
            android:gravity="center"
            android:text="Fifth Floor"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            discrollve:discrollve_alpha="true"
            android:layout_gravity="center"
            discrollve:discrollve_translation="fromLeft"
            android:src="@drawable/fifthfloor" />





    </us.egek.discrollview2.DiscrollViewContent>
</us.egek.discrollview2.DiscrollView>